			<javascript>javascript:validateTopChoiceCounts()</javascript>
			<value>20</value>			
		</input>
		<separator position="end"/>
		<separator header="Chart Core Properties" position="start"/>		
		<input inputType="text" name="chartHeight">
			<prompt>Chart Height </prompt>
			<javascript-event>onChange</javascript-event>
			<javascript>javascript:renderChart()</javascript>
			<value>350</value>			
		</input>
		<input inputType="text" name="chartWidth">
			<prompt>Chart Width </prompt>
			<javascript-event>onChange</javascript-event>
			<javascript>javascript:renderChart()</javascript>
			<value>350</value>
		</input>
