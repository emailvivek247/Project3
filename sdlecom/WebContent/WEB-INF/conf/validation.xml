<form-validation>
  <formset>
    <form name="configConnectionForm">
      <field property="jdbcdriver" depends="required">
        <arg0 key="jdbcdriver"/>
      </field>
      <field property="dbUrl" depends="required">
        <arg0 key="dburl"/>
      </field>
      <field property="dbUsername" depends="required">
        <arg0 key="dbusername"/>
      </field>
      <field property="dbPassword" depends="required">
        <arg0 key="dbpassword"/>
      </field>
      <field property="dbcpValidationQuery" depends="required">
        <arg0 key="dbcpvalidationquery"/>
      </field>
    </form>
  </formset>
</form-validation>
