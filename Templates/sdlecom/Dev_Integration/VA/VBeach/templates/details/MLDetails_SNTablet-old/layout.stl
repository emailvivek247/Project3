<#macro layout(title="", encoding="utf-8")>
<html><head><title>Details</title>
<meta http-equiv="content-type" content="text/html; charset=${encoding}">
<link rel="stylesheet" href="templates/details/MLDetails_SN/resource/theme-blue.css" type="text/css" media="print, projection, screen" />
<script type="text/javascript" src="templates/details/MLDetails_SN/resource/jquery.js"></script>
<script type="text/javascript" src="templates/details/MLDetails_SN/resource/jquery.tablesorter.js"></script>
<script type="text/javascript" src="templates/details/MLDetails_SN/resource/sdl.js"></script>

<#-- *Add js file for SmartNav -->
<script type="text/javascript" src="templates/details/MLDetails_SN/resource/jquery.tabSlideOut.js"></script> 

<link rel="shortcut icon" href="favicon.ico"/>
<script type="text/javascript">
$(document).ready(function() {
<#assign mode = request.getParameter("mode")>
<#if mode= "Tablet">    
    $('#backLink').attr('href', 'search.do?indexName=ml&templateName=Tablet&' + getCookie('searchstring'));
<#else>
    $('#backLink').attr('href', 'search.do?indexName=ml&templateName=Main&' + getCookie('searchstring'));
</#if>      
    }); 
</script>
</head>

<#-- *Include file for SmartNav -->
<#include "slideOutDiv.stl">

<#-- *Add onload function -->
<body onKeyPress="trapKeyBoardEvents(event)">
<#nested>

<#-- *Add div for SmartNav -->
<script language="javascript">
          if (getCookie('searchstring') != null) {          
      document.write('<div class="slide-out-div"><a class="handle" href="">Smart Nav</a> <label><b>Recent Search</b></label><div class="slide-out-div-content" width="100%" height="100%"><iframe id="SmartNavFrame"  width="100%" height="97%" frameborder="0" src="" filter="alpha(opacity=20)"></iframe></div></div>');
    }
</script>
</body></html>
</#macro>
