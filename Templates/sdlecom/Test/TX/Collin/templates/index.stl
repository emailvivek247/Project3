<#if request.getServletContext().getInitParameter("isSecurityEnabled") == "false" || (pageStyleUtil.isUserInRoleGroup('ALL_ROLE', request))>
${request.getRequestDispatcher("/search.do?searchType=1&indexName=collinopr").forward(request, response)}
<#else>
<#include "/WEB-INF/view/admin/layout/OtherBasic.stl">
<@indexLayout title="Search Platform" encoding="utf-8">
<script type="text/javascript" src="${request.getContextPath()}/resources/javascripts/tp.js"></script>
<link rel="stylesheet" href="${request.getContextPath()}/templates/resources/styles/frontpage.css" />
<link rel="stylesheet" href="${request.getContextPath()}/resources/styles/tp.css" />
<link rel="shortcut icon" href="${request.getContextPath()}/favicon.ico"/>

   
<#assign visibleIndexes = 0>
<table width="80%" align="center" border="0">         
            <tr>
            <td width="2%">&nbsp</td> 
                        <td align="center"><a href = "http://www.amcad.com"><img src="templates/resources/images/ROAM.png" border = "0" /></a></td>
            <td width="2%">&nbsp</td> 
                        </tr>
            </table>
<div id="control" style="margin-left:auto; margin-right:auto;width:80%; ">

<#foreach dc in dcs>
<#if dc.isValid() && dc.displayOrder &gt;= 0 && dc.getDefaultTemplateName()?has_content>
<#assign visibleIndexes = visibleIndexes + 1>    
<#assign _controlString = _controlString + "," + "'" + dc.name + "'">
<div id="${dc.name}" title="${dc.displayName}" style="height:500px;">
<br/>
<form method="get" action="search.do">
    <input type="hidden" name="searchType" value="1">
    <table align="center" border="0">
        <tr>
            <#if pageStyleUtil.isUserInRoleGroup('ALL_ROLE', request)>
            <td align="right">
                <input type="hidden" name="indexName" value="${dc.name}">     
                <#if dc.name == "collinopr">
                    <input class="text" type="text" name="q" size="81" maxlength="2048" value="${HTMLEncodedQuery}" >                                 
                    <input type="hidden" name="searchable" value="Name,Instrument,RecDate,PartyRole,IndexType,DocType,Book,Page,Lot,Unit,SectionNum,Subdivision,Township,Other,DesigStatus,GPIN,ProjectNum,RdNum,Desc2,Desc3,Phase,Acreage,Building">
                    <input type="hidden" name="sortBy" id="sortBy" value="RecDateFilter">
                    <input type="hidden" name="desc" id="desc" value="N">
                </#if>
                <#if dc.name == "collinml">
                    <input class="text" type="text" name="q" size="81" maxlength="2048" value="${HTMLEncodedQuery}" >                                 
                    <input type="hidden" name="searchable" value="Name,LicenseNum,Instrument,AppDateDisplay,AppDate,MarriageDate,PartyRole,DocType,Location">
                    <input type="hidden" name="sortBy" id="sortBy" value="MarriageDateFilter">
                    <input type="hidden" name="desc" id="desc" value="N">
                </#if>

            </td> 
            
            <td >
                <button type="submit" class="search" >Search</button>
                
            </td>
            <#else>
		<td align="center">
			You are not authorized to view this page. Please add a subscription for the County of Collin to access data from this site. 
			<br /><br />You can add access using this link -- <a href="viewAvailableSubscriptions.admin">Add Subscriptions</a><br /><br />
		</td>
	    </#if>
        </tr>
    </table>
</form>

<br/>
</div>
</#if> 
 </#foreach>

</div>
<#if visibleIndexes &gt; 0> 
    <script type="text/javascript">
    <!--    
    tpSet('control', 'tabs'${_controlString});
    // -->
    </script>
</#if> 
</@indexLayout>

</#if>