<?xml version="1.0" encoding="${encoding}"?>
${response.setContentType("application/atom+xml; charset=" + encoding)}
<#assign modifiedDateColumnName = searchResult.datasetConfiguration.modifiedDateColumn.columnName>
<feed version="0.3" xmlns="http://purl.org/atom/ns#">
  <title><![CDATA[This is an example from SDL: ${q}]]></title>
  <link rel="alternate" type="text/html" href="${(WebserverStatic.getServerURL() + "search.do?indexName=" + indexName + "&templateName=" + templateName + "&q=" + URLEncodedQuery)?html}"/>
  <modified></modified>
  <author>
    <name></name>
  </author>
<#foreach doc in searchResult.docs>
  <entry>
    <title><![CDATA[${doc.get("Instrument")}:]]></title>
    <link rel="alternate" type="text/html" href="http://www.sample.com/id=${doc.get("Instrument")}"/>
    <#if modifiedDateColumnName?has_content>
      <issued>${doc.getDate(modifiedDateColumnName)?string("yyyy-MM-dd'T'HH:mm:ssZ")}</issued>
      <modified>${doc.getDate(modifiedDateColumnName)?string("yyyy-MM-dd'T'HH:mm:ssZ")}</modified>
    </#if>
    <summary><![CDATA[]]></summary>
  </entry>
</#foreach></feed>
