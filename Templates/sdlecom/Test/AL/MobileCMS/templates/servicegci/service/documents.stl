
<#if searchResult.docs?has_content>
<table id="servicegci" class="tablesorter">
 <thead><tr>
  <th>${searchResult.datasetConfiguration.getColumn("AppearanceDate").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("PartyName").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("IssueDate").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("ServiceDate").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("Comments").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("Executed").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("EventDesc").displayName}</th>
  
  
 </tr></thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
  
  			<#assign AppearanceDate = doc.getValues("AppearanceDate")>
			<#assign PartyName = doc.getValues("PartyName")>
			<#assign IssueDate = doc.getValues("IssueDate")>
			<#assign ServiceDate = doc.getValues("ServiceDate")>
			<#assign Comments = doc.getValues("Comments")>
			<#assign Executed = doc.getValues("Executed")>
			<#assign EventDesc = doc.getValues("EventDesc")>
			<#assign loopCounter = 0>

		    <tr>
			  <td>${pageStyleUtil.format(date.format("yyyy/MM/dd HH:mm:ss z",doc.getDate("AppearanceDate")), "yyyy/MM/dd HH:mm:ss z", "MM/dd/yyyy HH:mm:ss z")}</td>
			  <td>${PartyName[loopCounter]?replace('|', '&nbsp;')}</td>
			  <td>${IssueDate[loopCounter]?replace('|', '&nbsp;')}</td>
			  <td>${ServiceDate[loopCounter]?replace('|', '&nbsp;')}</td>
			  <td>${Comments[loopCounter]?replace('|', '&nbsp;')}</td>
			  <td>${Executed[loopCounter]?replace('|', '&nbsp;')}</td>
			  <td>${EventDesc[loopCounter]?replace('|', '&nbsp;')}</td>
		   </tr>
		   <#assign loopCounter = loopCounter + 1> 
 </#foreach>
  </tbody>
 </table>
<#else>

<table id="servicegci" class="tablesorter">
 <thead><tr>
  <th>${searchResult.datasetConfiguration.getColumn("AppearanceDate").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("PartyName").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("IssueDate").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("ServiceDate").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("Comments").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("Executed").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("EventDesc").displayName}</th>
  
  
 </tr></thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
  
   <tr>
      	      <td>No service information available.</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
   </tr>

 </#foreach>
  </tbody>
 </table>


</#if>


<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#servicegci').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
		"aaSorting": [[0, "asc"]]
	});
} );
</script>
