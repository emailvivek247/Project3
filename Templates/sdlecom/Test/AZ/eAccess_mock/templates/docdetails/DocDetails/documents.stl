<b>Case Event Information</b>
<#if searchResult.docs?has_content>
<table id="doc" class="tablesorter">
 <thead>
	<tr>
		
		<th>${searchResult.datasetConfiguration.getColumn("DocumentTitle").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("DocumentConceptionStamp").displayName}</th>
		<th>Add to Cart</th>
	</tr>
 </thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
 
	<tr>
	     
	     <td>${searchResult.highlight(doc, "DocumentTitle")}</td>
	     <td>${date.format("MM/dd/yyyy HH:mm:ss z",doc.getDate("DocumentConceptionStamp"))}</td>
	     <td><input class="cartLink" type="button" title="${doc.get("DocumentID")}" value="Add to Cart"/></td>
        </tr>
</#foreach>
 </tbody>
</table>
 
