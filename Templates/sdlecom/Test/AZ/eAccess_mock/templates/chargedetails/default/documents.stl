	<th>${searchResult.datasetConfiguration.getColumn("DispositionDescription").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("DispositionDate").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("InitialChargeDescription").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("OffenseDesc").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("OffenceClassCode").displayName}</th>
    </tr>
 </thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
