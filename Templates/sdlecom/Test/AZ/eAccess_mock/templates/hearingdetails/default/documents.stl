
<#if searchResult.docs?has_content>
<table id="hearings" class="tablesorter">
 <thead><tr>
  
	<th>${searchResult.datasetConfiguration.getColumn("CourtRoomDescription").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("SessionStartDateTime").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("SessionEndDateTime").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("ScheduledJudgeName").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("HeardByJudgeName").displayName}</th>
	<th>${searchResult.datasetConfiguration.getColumn("HearingResultTypeDescription").displayName}</th>
 </tr></thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
  
   <tr>
	<td>${searchResult.highlight(doc, "CourtRoomDescription")}</td>
	<td>${pageStyleUtil.format(date.format("yyyy/MM/dd HH:mm:ss z",doc.getDate("SessionStartDateTime")), "yyyy/MM/dd HH:mm:ss z", "MM/dd/yyyy")}</td>
	<td>${pageStyleUtil.format(date.format("yyyy/MM/dd HH:mm:ss z",doc.getDate("SessionEndDateTime")), "yyyy/MM/dd HH:mm:ss z", "MM/dd/yyyy")}</td>
	<td>${searchResult.highlight(doc, "ScheduledJudgeName")}</td>
	<td>${searchResult.highlight(doc, "HeardByJudgeName")}</td>
	<td>${searchResult.highlight(doc, "HearingResultTypeDescription")}</td>
 </tr>
 </#foreach>

 </tbody>
</table>

