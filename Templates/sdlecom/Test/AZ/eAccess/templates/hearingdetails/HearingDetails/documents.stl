		<th>${searchResult.datasetConfiguration.getColumn("SchedulingJudgeName").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("HeardByJudgeName").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("HearingResultTypeCode").displayName}</th>
	</tr>
 </thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
  
	<tr>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
	</tr>
 </tbody>
</table> 
</#foreach>
</#if>


<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#hearings').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
