<#assign num_pages = (total/length)?int>

<#if num_pages*length < total>
 <#assign num_pages = num_pages + 1>
</#if>
<#assign current_page_index = (start/length)?int + 1>

<#assign startItemIndex = (current_page_index-1)*length + 1>
<#assign endItemIndex = current_page_index*length>
<#if (endItemIndex>total)>
 <#assign endItemIndex = total>
</#if>
<table width=100% border=0 cellpadding=0 cellspacing=0 style="background:#2191C0 url(styles/images/ui-bg_gloss-wave_75_2191c0_500x100.png) repeat-x scroll 50% 50%;border:1px">
  <tr>
    <td nowrap style="color:#EAF5F7"><b>${dc.displayName?if_exists}</b><#if dc.isSecure> Welcome ${request.principal.name?if_exists}!</#if></td>
    <td align=right nowrap style="color:#EAF5F7">
      <b>Results</b>
      <b>${startItemIndex?if_exists}</b> - <b>${endItemIndex?if_exists}</b> of <b>${total?if_exists}</b> <#-- for <b>${Request.searchForm.searchQuery}</b>. -->
      (<b>${searchTime?if_exists}</b> seconds) </font></td>
  </tr>
</table> 
