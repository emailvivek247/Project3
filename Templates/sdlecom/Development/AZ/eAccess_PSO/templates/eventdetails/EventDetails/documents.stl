<b>Event Information</b>
<#if searchResult.docs?has_content>
<table id="event" class="tablesorter">
 <thead>
	<tr>
		<th>${searchResult.datasetConfiguration.getColumn("EventDate").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("SourceSystemEventDesc").displayName}</th>
	</tr>
 </thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
  
	<tr>
		<td>${searchResult.highlight(doc, "EventDate")}</td>
		<td>${searchResult.highlight(doc, "SourceSystemEventDesc")}</td>
	</tr>
 </tbody>	
 </#foreach>
 </table>
<#elseif searchResult.xstreamdocs?has_content>
<table id="event" class="tablesorter">
 <thead>
	<tr>
		<th>${searchResult.datasetConfiguration.getColumn("EventDate").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("SourceSystemEventDesc").displayName}</th>
	</tr>
 </thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.xstreamdocs>
  
	<tr>
		<td>${searchResult.highlight(doc, "EventDate")}</td>
		<td>${searchResult.highlight(doc, "SourceSystemEventDesc")}</td>
	</tr>
 </tbody>	
 </#foreach>
 </table>
<#else>
 <table id="event" class="tablesorter">
  <thead>
 	<tr>
 		<th>${searchResult.datasetConfiguration.getColumn("EventDate").displayName}</th>
