
<#if searchResult.docs?has_content>
<table id="event" class="tablesorter">
	<thead>
		<tr>
			<th>${searchResult.datasetConfiguration.getColumn("EventTypeDescription").displayName}</th>
			<th>${searchResult.datasetConfiguration.getColumn("EventDate").displayName}</th>
			<th>${searchResult.datasetConfiguration.getColumn("AssociatedParticipantType").displayName}</th>
		</tr>
	</thead>
	<tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
		<tr>
			<td>${searchResult.highlight(doc, "EventTypeDescription")}</td>
			<td>${searchResult.highlight(doc, "EventDate")}</td>
			<td>${searchResult.highlight(doc, "AssociatedParticipantType")}</td>
		</tr>

	</tbody>
</table>
 </#foreach>

