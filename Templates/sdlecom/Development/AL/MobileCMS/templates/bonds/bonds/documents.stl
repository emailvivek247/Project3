
<b>Bonds</b>
<#if searchResult.docs?has_content>
	<table id="bonds" class="tablesorter">
	 <thead>
	 	<tr>
		  <th>${searchResult.datasetConfiguration.getColumn("BondID").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("BondNumber").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("BondAmount").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("PartyName").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("BondEvent").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("FilingDate").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("Bondsman").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("Underwriter").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("BondType").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("Comments").displayName}</th>
		</tr>
	    </thead>
	 <tbody>
	<#assign ResultId =0>
	 <#foreach doc in searchResult.docs>

	   <tr>
		<td>${number.format("###0.##",doc.get("BondID"))}</td>
		<td>${searchResult.highlight(doc, "BondNumber")}</td>
		<td>${pageStyleUtil.formatCurrency(doc.get("BondAmount"))}</td>
		<td>${searchResult.highlight(doc, "PartyName")}</td>
		<td>${searchResult.highlight(doc, "BondEvent")}</td>
		<td>${pageStyleUtil.format(date.format("yyyy/MM/dd HH:mm:ss z",doc.getDate("FilingDate")), "yyyy/MM/dd HH:mm:ss z", "MM/dd/yyyy HH:mm:ss a")}</td>
		<td>${searchResult.highlight(doc, "Bondsman")}</td>
		<td>${searchResult.highlight(doc, "Underwriter")}</td>
		<td>${searchResult.highlight(doc, "BondType")}</td>
		<td>${searchResult.highlight(doc, "Comments")}</td>
	 </tr>
	 </#foreach>
	  </tbody>
	</table>
<#else>
 	<table id="bonds" class="tablesorter">
		 <thead>
		 	<tr>
			  <th>${searchResult.datasetConfiguration.getColumn("BondID").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("BondNumber").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("BondAmount").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("PartyName").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("BondEvent").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("FilingDate").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("Bondsman").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("Underwriter").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("BondType").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("Comments").displayName}</th>
			</tr>
		    </thead>
		 <tbody>
		<#assign ResultId =0>
		 <#foreach doc in searchResult.docs>
	
		   <tr>
			<td>No Data Available.</td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
		 </tr>
		 </#foreach>
		  </tbody>
	</table>
</#if>



<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#bonds').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
		"aaSorting": []
	});
} );
</script>
