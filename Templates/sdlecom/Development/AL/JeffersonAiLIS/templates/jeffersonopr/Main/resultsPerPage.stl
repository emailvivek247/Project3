<script type="text/javascript">
function resizeResults() {
  var list = document.getElementById("resultspp");
  if (!list) return false;
  if (list.selectedIndex > -1) {
    var count = list.options[list.selectedIndex].value;
    setCookie('resultspp', count);
    window.location.reload(true);
  }
}
</script>

<table class="resultsPP">
<tr><td align=right nowrap>
<b><font class="label">Results per page&nbsp;:&nbsp;</font></b>
<select id="resultspp" onChange="resizeResults()">
<#if request.getServletContext().getInitParameter("isSecurityEnabled") == "false" || (request.isUserInRole('ROAM_ADMIN') || request.isUserInRole('JEFFERSON_PROBATE_ACCESS') || request.isUserInRole('JEFFERSON_ADMIN'))>
<script type="text/javascript">
var count = ${length};
for (var i = 100; i <= 500; i+=100) {
  var option = '<option value="'+i;
  if (i == count) option += '" selected="selected';
  option += '">'+i+'</option>';
  document.write(option);
}
</script>
<#elseif request.getServletContext().getInitParameter("isSecurityEnabled") == "false" || (request.isUserInRole('ROAM_ADMIN') || request.isUserInRole('JEFFERSON_PROBATE_ACCESS') || request.isUserInRole('JEFFERSON_PERPAGE_ACCESS') || request.isUserInRole('JEFFERSON_FREE_ACCESS') || request.isUserInRole('JEFFERSON_ADMIN'))>
<script type="text/javascript">
var count = ${length};
for (var i = 25; i <= 100; i+=25) {
  var option = '<option value="'+i;
  if (i == count) option += '" selected="selected';
  option += '">'+i+'</option>';
  document.write(option);
}
</script>
</#if>
</select>
</td></tr>
</table>
