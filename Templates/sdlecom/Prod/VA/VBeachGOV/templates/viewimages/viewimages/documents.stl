<b>View Images</b>
<#if searchResult.docs?has_content>
<table id="viewimage" class="tablesorter">
 <thead><tr>
  
  <th>View Image</th>
  <th>${searchResult.datasetConfiguration.getColumn("DOCUMENT_DESC").displayName}</th>
  
 </tr></thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
 
 <#assign imagelocation = doc.get("FILE_SERVER") + "\\" +  doc.get("FILE_PATH")  + "\\" + doc.get("SPLIT_FOLDER") + "\\" + doc.get("DOCUMENT_NAME")>
     <#--<#assign imagelocation = "\\\\nv-nas1\\DevImages\\VABeachAiCS\\CS\\Test Batch 1\\SPLIT_OUTPUT_1">-->
     <#assign tree = pageStyleUtil.getHierarchialTreeForFolder(imagelocation)>
        
<#list tree?keys as key>     	    
  <#assign listOfFiles = tree[key]> 
  <#assign loopCounter = 0>
   <tr>
		
    	      <td><a href="${request.getContextPath()}/search.do?indexName=vbimage_aics&templateName=Image&lq=${pageStyleUtil.encodeURL("ID:" + doc.get("ID"))}" target="_blank" onclick="return loadit();">View Image</a></td>
    	      <td>${searchResult.highlight(doc, "DOCUMENT_DESC")}</td>
              <#assign loopCounter = loopCounter + 1>
              
   </tr>
</#list>

 </#foreach>
<#else>
 
</#if>
 </tbody>
</table>


<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#viewimage').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
		"aaSorting": []
	});
} );
</script>
