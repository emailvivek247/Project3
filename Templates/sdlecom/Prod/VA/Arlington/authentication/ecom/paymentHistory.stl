						<!-- Begin:  Define Grid for PayAsUGo  History -->
	
						<div id="payAsUGoHistDiv" >
				            <div id="payAsUGoHistGrid"></div>
					            <script>
						             $(document).ready(function () {
						             	function startChange() {
					                        var startDate = start.value(),
					                        endDate = end.value();
					
					                        if (startDate) {
					                            startDate = new Date(startDate);
					                            startDate.setDate(startDate.getDate());
					                            end.min(startDate);
					                        } else if (endDate) {
					                            start.max(new Date(endDate));
					                        } else {
					                            endDate = new Date();
					                            start.max(endDate);
					                            end.min(endDate);
					                        }
					                    }
					
					                    function endChange() {
					                        var endDate = end.value(),
					                        startDate = start.value();
					
					                        if (endDate) {
					                            endDate = new Date(endDate);
					                            endDate.setDate(endDate.getDate());
					                            start.max(endDate);
					                        } else if (startDate) {
					                            end.min(new Date(startDate));
					                        } else {
					                            endDate = new Date();
					                            start.max(endDate);
					                            end.min(endDate);
					                        }
					                    }
					
					                    var start = $("#fromDate_payg").kendoDatePicker({
					                        change: startChange
					                    }).data("kendoDatePicker");
					
					                    var end = $("#toDate_payg").kendoDatePicker({
					                        change: endChange
					                    }).data("kendoDatePicker");
					
					                    start.max(end.value());
					                    end.min(start.value());
						             	
						             
							            var payAsUGoDataSource = new kendo.data.DataSource({
							   				 transport: {
							        			read: {
							        					url: function() {
							        							var url = 'payAsUGoPaymentHistory.admin?';
						        								if($('#fromDate_payg').val() != ''){ 
						        									url = url +'fromDate='+  $('#fromDate_payg').val();
						        								} 
						        								if($('#toDate_payg').val() != ''){
						        									// if from date was added then we need '&' character before key-value
						        									if($('#fromDate_payg').val() != ''){
						        										url = url + '&';
						        									} 
					        										url = url + 'toDate=' + $('#toDate_payg').val();
						        								}
							        							return url;
							        						},  
											            dataType: "json"
											            
										        }
						                 	},
						                 	
													
							    			// describe the result format
							    			schema: {
							    					data: "",
						                            model: {
						                            		id: "payAsUGoTxId",
						                                    fields:  {
						                                        transactionDateString: { },
						                                        transactionDate: { },
						                                        txRefNum: { },
						                                        Subscription: { } ,
						                                        cardNumber: { },
						                                        accountName: { },
						                                        transactionType: {},
						                                        certified: {},
						                                        User: { },
						                                        Site: { },
						                                        itemsPurchased: {},
						                                        totalTxAmount: {type: "number"}
						                                    }
						                                },
						                                data: "records",
                        								total: "recordCount"
						                         },
		                                        pageSize: 10,
 												group: [
 															{ field: "Site", dir: "asc" },
 															{ field: "Subscription", dir: "asc" }, 
		                                        		 	{ field: "User", dir: "asc"} 
		                                        	],   
								                serverPaging: true,
												batch: false
						                });
								                
						                 var payAsUGoHistGrid = $("#payAsUGoHistGrid").kendoGrid({
						                        dataSource: payAsUGoDataSource,
						                        autoBind: true,
						                        scrollable: false,
						                        navigatable: true,
						                        pageable: {
						                        		refresh: true,
						                        		pageSizes: true,
						                        		pageSize: true,                        		
						                        		numeric: true,
						                        		info: true,
						                        		input: true
						                        },  
		
						                        columns: [
						                            { field: "transactionDateString", title: "Payment Date",  width: 120 },
						                            { field: "txRefNum", title: "Transaction Reference Number", width: 70 },
						                            { field: "transactionType", title: "Transaction Type", width: 75, template: function(e){ return toCamelCase(e.transactionType); } },
						                            { field: "certified", title: "Certified Document", width: 75, template: "#= certified ? 'Yes' : 'No' #"},
						                            { field: "itemsPurchased", title: "Documents Purchased", width: 70},
						                            { field: "cardNumber", title: "Card Charged", width: 65 },
						                            { field: "accountName", title: "Name on Card", width: 65 },
						                            { field: "totalTxAmount", title: "Amount", format: "{0:c}", width: 60 },
						                            { field: "txRefNum", title: "Action", width: 75,	template: function(e){
						                            	if(e.transactionType == 'CHARGE'){
						                            		return '<a href="viewPayAsUGoPaymentDetails.admin?userName=' + e.User + '&webTxId=' + e.payAsUGoTxId + '&isRefund=N"><img src="resources/images/icon_info.png" alt="View Details" class="help" original-title="View Details">';
						                            	} else {
						                            		return '<a href="viewPayAsUGoPaymentDetails.admin?userName=' + e.User + '&webTxId=' + e.payAsUGoTxId + '&isRefund=Y"><img src="resources/images/icon_info.png" alt="View Details" class="help" original-title="View Details">';
						                            	}
						                            }}
						                            ],
		
							                 });
												$("#payAsUGoHistGrid .k-pager-wrap").append('<a href="#" onClick="exportPayAsUGoExcel()"><img src="resources/images/excel.png" alt="Export To Excel" class="help" original-title="Export To Excel"/>');
												$("#payAsUGoHistGrid .k-pager-wrap").append('<a href="#" onClick="exportPayAsUGoPdf()"><img src="resources/images/pdf.png" alt="Export To PDF" class="help" original-title="Export To PDF">');
								});
						            
						                 
						            </script>
							             <style scoped>
							             
							                #grid .k-toolbar
							                {
							                    min-height: 27px;S
							                    padding: 1.3em;
							                }
							                <!-- Wrap the grid headers -->
							                .k-grid .k-grid-header .k-header .k-link {height: auto;}
											.k-grid .k-grid-header .k-header {white-space: normal;}
											.k-grid {    font-size: 12px; }
											.k-grid td {line-height: 1.5em;}
											.k-grid .k-grouping-row{font-weight:bold;}
											.k-group, .k-grouping-row td, td.k-group-cell {
													background-color: #F2F2F2; border-width: 0px;
											}
											.k-grid-footer {display: none;}
							                
							            </style>
						        </div>							
						
						<!-- End:    Define Grid for PayAsUGO History -->
					
					
						<div id="chart_wrapper" class="chart_wrapper"></div>
					<!-- End bar chart table-->
				</div>
				</#if> 
			</div>
			<#else>
			<br /><br />
				<div class="headerLabel" style="text-align:center;padding:15px"><@spring.message code="security.ecommerce.label.noPaymentHistory" /></div>
			</#if>					
			<br /><br />
			<div class="headerLabel unPaid" style="text-align:center;padding:15px"><i class="fa fa-exclamation-circle red" style="font-size:18px;"></i>&nbsp;<@spring.message code="security.ecommerce.message.purchaseHistoryNote" /></div>
			<div style="text-align:right;padding:15px"><a target="_blank" href="http://get.adobe.com/reader/otherversions/"><img src="resources/images/pdf.png" /><@spring.message code="generalMessages.getAdobeReader" /></a></div>
			<br /><br />
		</div>
