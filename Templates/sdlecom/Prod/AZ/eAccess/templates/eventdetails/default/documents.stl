<b>Event Details</b>
<#if searchResult.docs?has_content>
<table id="events" class="tablesorter">
 <thead>
 	<tr>
  		<th>${searchResult.datasetConfiguration.getColumn("EventDate").displayName}</th>
  		<th>${searchResult.datasetConfiguration.getColumn("EventTypeDescription").displayName}</th>
 	</tr>
 </thead>
 <tbody>
	<#assign ResultId =0>
	 <#foreach doc in searchResult.docs>

		
	<tr>
		<td>${date.format("MM/dd/yyyy HH:mm:ss z",doc.getDate("EventDate"))}</td>
		<td>${searchResult.highlight(doc, "EventTypeDescription")}</td>
 	</tr>

	 </#foreach>
	<#else>

		<table id="events" class="tablesorter">
		 <thead>
			<tr>
				<th>${searchResult.datasetConfiguration.getColumn("EventDate").displayName}</th>
				<th>${searchResult.datasetConfiguration.getColumn("EventTypeDescription").displayName}</th>
			</tr>
		 </thead>
		 <tbody>
			<tr>
				<td>No event information available</td>
				<td></td>
			</tr>

	</#if>
 </tbody>
</table>


<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#events').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
		"aaSorting": []
	});
} );
</script>
