<b>Charge Information</b>
<#if searchResult.docs?has_content>
<table id="charge" class="tablesorter">
 <thead>
 	<tr>
		<th>${searchResult.datasetConfiguration.getColumn("OffenceClassShortDescription").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("OffenseARSDescription").displayName}</th>
		<#--<th>${searchResult.datasetConfiguration.getColumn("OffenceRefNum").displayName}</th>-->
		<th>${searchResult.datasetConfiguration.getColumn("DispositionDate").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("FinalARSDescription").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("FinalARSCode").displayName}</th>
		<th>${searchResult.datasetConfiguration.getColumn("OffenceClassCode").displayName}</th>
	</tr>
 </thead>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
  <tbody>
  	 <tr>
 		<td>${searchResult.highlight(doc, "OffenceClassShortDescription")}</td>
		<td>${searchResult.highlight(doc, "OffenseARSDescription")}</td>
 		<#--<td>${searchResult.highlight(doc, "OffenceRefNum")}</td>-->
 		<td>${searchResult.highlight(doc, "DispositionDate")}</td>
 		<td>${searchResult.highlight(doc, "FinalARSDescription")}</td>
 		<td>${searchResult.highlight(doc, "FinalARSCode")}</td>
 		<td>${searchResult.highlight(doc, "OffenceClassCode")}</td>
 		
 	</tr>
     </#foreach> 
  </tbody>
</table>
 
<#else>
	<table id="charge" class="tablesorter">
	 <thead>
		<tr>
			<th>${searchResult.datasetConfiguration.getColumn("OffenceClassShortDescription").displayName}</th>
			<th>${searchResult.datasetConfiguration.getColumn("OffenseARSDescription").displayName}</th>
			<#--<th>${searchResult.datasetConfiguration.getColumn("OffenceRefNum").displayName}</th>-->
			<th>${searchResult.datasetConfiguration.getColumn("DispositionDate").displayName}</th>
			<th>${searchResult.datasetConfiguration.getColumn("FinalARSDescription").displayName}</th>
			<th>${searchResult.datasetConfiguration.getColumn("FinalARSCode").displayName}</th>
			<th>${searchResult.datasetConfiguration.getColumn("OffenceClassCode").displayName}</th>
		</tr>
	 </thead>
	 <tbody>
		 <tr>
			<td></td>
			<td></td>
			<td></td>
		</tr>
	 </tbody>
	</table>
</#if>



