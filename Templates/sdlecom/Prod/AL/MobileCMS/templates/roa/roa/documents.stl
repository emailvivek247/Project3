<b>Register of Actions</b>
<#if searchResult.docs?has_content>
<table id="roa" class="tablesorter">
 <thead><tr>
  <th>${searchResult.datasetConfiguration.getColumn("FilingDate").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("Party").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("Description").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("Comments").displayName}</th>
 </tr></thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
 
  <#assign Comments = doc.getValues("Comments")>
  <#assign Party = doc.getValues("Party")>
  <#assign Description = doc.getValues("Description")>
  <#assign loopCounter = 0>
 
   <tr>
	<td>${searchResult.highlight(doc, "FilingDate")}</td>
        <td>${searchResult.highlight(doc, "Party")}</td>
	<td>${searchResult.highlight(doc, "Description")}</td>
	<#--ADD HIGHLIGHT TO COMMENTS THAT HAVE THE WORD "SOP" INSIDE-->
	 <#if Comments[loopCounter]?contains("SOP")>	
		<td style="background-color:#ffff33;">${Comments[loopCounter]?replace('|', '&nbsp;')}</td>
	 <#else>
	    	<td >${Comments[loopCounter]?replace('|', '&nbsp;')}</td>
	</#if>	
	<#assign loopCounter = loopCounter + 1>
</tr>

 </#foreach>
  </tbody>
</table>
<#else>
	 <table id="roa" class="tablesorter">
	  <thead><tr>
	   <th>${searchResult.datasetConfiguration.getColumn("FilingDate").displayName}</th>
	   <th>${searchResult.datasetConfiguration.getColumn("Party").displayName}</th>
	   <th>${searchResult.datasetConfiguration.getColumn("Description").displayName}</th>
	   <th>${searchResult.datasetConfiguration.getColumn("Comments").displayName}</th>
	  </tr></thead>
	  <tbody>
	 <#assign ResultId =0>
	  <#foreach doc in searchResult.docs>
	    <tr>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
	  </tr>

	  </#foreach>
	   </tbody>
	</table>
</#if>



<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#roa').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
		"aaSorting": [[ 0, "desc" ]]
	});
} );
</script>