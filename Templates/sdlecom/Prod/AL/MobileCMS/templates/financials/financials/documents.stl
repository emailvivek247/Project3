
<b>Trust Fund Accounts</b>
<#if searchResult.docs?has_content>
<table id="financials" class="tablesorter">
 <thead>
	 <tr>
		  <th>${searchResult.datasetConfiguration.getColumn("TrustFundAcc").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("BankAccount").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("AccountDate").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("TaxID").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("PayoutDate").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("Custodian").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("Comments").displayName}</th>
		  <th>${searchResult.datasetConfiguration.getColumn("Balance").displayName}</th>
	</tr>
</thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
	   <tr>
		<td>${searchResult.highlight(doc, "TrustFundAcc")}</td>
		<td>${searchResult.highlight(doc, "BankAccount")}</td>
		<td>${pageStyleUtil.format(date.format("yyyy/MM/dd HH:mm:ss z",doc.getDate("AccountDate")), "yyyy/MM/dd HH:mm:ss z", "MM/dd/yyyy HH:mm:ss a")}</td>
		<td>${searchResult.highlight(doc, "TaxID")}</td>
		<td>${pageStyleUtil.format(date.format("yyyy/MM/dd HH:mm:ss z",doc.getDate("PayoutDate")), "yyyy/MM/dd HH:mm:ss z", "MM/dd/yyyy HH:mm:ss a")}</td>
		<td>${searchResult.highlight(doc, "Custodian")}</td>
		<td>${searchResult.highlight(doc, "Comments")}</td>
		<td>${pageStyleUtil.formatCurrency(doc.get("Balance"))}</td>
	 </tr>
 </#foreach>
<#else>
 	<table id="financials" class="tablesorter">
	 <thead>
		 <tr>
			  <th>${searchResult.datasetConfiguration.getColumn("TrustFundAcc").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("BankAccount").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("AccountDate").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("TaxID").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("PayoutDate").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("Custodian").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("Comments").displayName}</th>
			  <th>${searchResult.datasetConfiguration.getColumn("Balance").displayName}</th>
		</tr>
	</thead>
	 <tbody>
	<#assign ResultId =0>
	 <#foreach doc in searchResult.docs>
		   <tr>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
		 </tr>
	 </#foreach>
	</tbody>
</table>
</#if>
 </tbody>
</table>


<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#financials').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
		"aaSorting": []
	});
} );
</script>
