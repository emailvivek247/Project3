
<#macro displaySortBy(c)>
  <#if c == "Relevance">
    <#if sortBy?has_content>
      <#assign _href = pageStyleUtil.addOrSetQuery(noStartQueryString, "sortBy", null)>
      <#assign _href = pageStyleUtil.addOrSetQuery(_href, "desc", null)>
      <a href="?${_href}">Relevance</a>
    <#else>
    Relevance
    </#if>
  <#elseif sortBy == c.columnName>
    ${c.displayName}
  <#else>
    <#assign _href = pageStyleUtil.addOrSetQuery(noStartQueryString, "sortBy", c.columnName)>
    <#if !c.isDescending><#assign _href = pageStyleUtil.addOrSetQuery(_href, "desc", "N")>
    <#else><#assign _href = pageStyleUtil.addOrSetQuery(_href, "desc", null)>
    </#if>
    <a href="?${_href}">${c.displayName}</a>
  </#if>
</#macro>
<table width=100% border=0 cellpadding=0 cellspacing=0>
  <tr>
    <td align=left>



    </td>
    <td align=right nowrap>Sort by <#call displaySortBy("Relevance")>
    <#foreach c in dc.sortableColumns>
      ,
      <#call displaySortBy(c)>
    </#foreach>
    </td>
  </tr>
</table>
