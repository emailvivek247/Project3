	function postAdvancedSearch() {
		try {
                        if (!doDateCheck('frmSessionDate','toSessionDate'))return;
                        $('#CourtType').val($('#CourtTypeSelect').val());
                        document.getElementById("q").value = '';
			setCookie('CaseSearch' + 'CourtTypeSelect', $('#CourtTypeSelect').attr("selectedIndex"), 0);
			var inputElemenets =  $('input[type="text"]');
			var elem = unique(inputElemenets);
			var searchString = '';
			var searchQuery = '';
			var andOrClause ='';
			var doubleQuotes = '"';
			var counter = 0;
			var textcounter = 0;
			var searchValue = '';
			var searchValueQuery = '';
			for(var i = 0; i < elem.length; i++) {
				if ($('#' + elem[i].name + '_select') != null) {
					counter++;	
				}					
			}
			for(var i = 0; i < elem.length; i++) {
				if ($('#' + elem[i].name + '_select') != null) {
					setCookie('CourtDateSearch' + elem[i].name + '_select', $('#' + elem[i].name + '_select').attr("selectedIndex"), 0);
					textcounter++
					if (textcounter == counter) {
						andOrClause = '';
					} else {
						andOrClause = ' ' + $('#' + elem[i].name + '_select').val() + '  ';
					}
					if (elem[i].name == 'SessionDate') {
						searchValue = getDateQuery(elem[i].name);
						searchValueQuery = getDateSearchQuery(elem[i].name);
					} else {
						searchValue = elem[i].name + ':' + doubleQuotes + jQuery.trim(elem[i].value) + doubleQuotes;
						searchValueQuery = elem[i].name + ':' + doubleQuotes + jQuery.trim(elem[i].value) + doubleQuotes;
					}
					searchString = searchString + searchValue + andOrClause;
					searchQuery = searchQuery  + searchValueQuery + andOrClause;
				}
			}
			$('#lq').val(searchString);
			$('#q').val('');
			$('#searchQuery').val(searchQuery);
			document.search_${searchResult.indexName}.method = "get";
			document.search_${searchResult.indexName}.action = "search.do";
			document.search_${searchResult.indexName}.searchType.value = "2";			
			document.search_${searchResult.indexName}.submit();
		} catch (err) {
			alert(err.message);
		}
  	} 	
	function postBasicSearch() {
		try {	
			setCookie('CourtDateSearch' + $('#q').name, $('#q').val(), 0);
			$('#lq').val('');
			document.search_${searchResult.indexName}.method = "get";
			$('#searchQuery').val($('#q').val());
			document.search_${searchResult.indexName}.action = "search.do";
			document.search_${searchResult.indexName}.searchType.value = "1";
			document.search_${searchResult.indexName}.submit();
		} catch (err) {
			alert(err.message);
		}
  	} 

//-->
