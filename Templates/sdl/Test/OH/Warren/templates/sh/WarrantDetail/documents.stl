<b>Scheduled Hearings</b>
       <table id="hearings" class="tablesorter">
          <thead>
             <tr>
<#--Names which are hardcoded are for display purposes (i.e. they need a space between words in the name)-->
                 <th>${searchResult.datasetConfiguration.getColumn("AppDesc").displayName}</th>
		 <th>${searchResult.datasetConfiguration.getColumn("HearingDesc").displayName}</th>
		 <th>${searchResult.datasetConfiguration.getColumn("SessionDate").displayName}</th>
		 <th>${searchResult.datasetConfiguration.getColumn("Judge").displayName}</th>
		 <th>${searchResult.datasetConfiguration.getColumn("HearingResult").displayName}</th>
		 
             </tr>
           </thead>
        <tbody>
<#if searchResult.docs?has_content>
<#foreach doc in searchResult.docs>
        <#assign AppDesc = doc.getValues("AppDesc") HearingDesc = doc.getValues("HearingDesc") SessionDate = doc.getValues("SessionDate") Judge = doc.getValues("Judge")
                 HearingResult = doc.getValues("HearingResult") CourtSessionIDs = doc.getValues("CourtSessionID") loopCounter = 0>

        <#foreach CourtSessionID in CourtSessionIDs>
             <tr>
                <td>${AppDesc[loopCounter]?replace('|', '&nbsp;')}</td>
                <td>${HearingDesc[loopCounter]?replace('|', '&nbsp;')}</td>
                <td>${SessionDate[loopCounter]?replace('|', '&nbsp;')}</td>
                <td>${Judge[loopCounter]?replace('|', '&nbsp;')}</td>
                <td>${HearingResult[loopCounter]?replace('|', '&nbsp;')}</td>
                <#assign loopCounter = loopCounter + 1>
            </tr>
        </#foreach>      
</#foreach>
<#else>
            <tr>
                <td colspan="11"><b><i>No Scheduled Hearings Information Available.</i></b></td>               
            </tr>
</#if>
  </tbody>
</table>
<script type="text/javascript">
$(function() { 
  $("#hearings").tablesorter({widgets: ['zebra']});
}); 
</script>


