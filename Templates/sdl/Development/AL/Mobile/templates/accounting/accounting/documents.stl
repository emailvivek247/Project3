<b>Accounting</b>
<#if searchResult.docs?has_content>
<table id="accounting" class="tablesorter">
 <thead>
 <tr>
 	 <th>${searchResult.datasetConfiguration.getColumn("PartyName").displayName}</th>
 	 <th>${searchResult.datasetConfiguration.getColumn("PartyRole").displayName}</th>
 	 <th>${searchResult.datasetConfiguration.getColumn("PartyIdentifier").displayName}</th>
 	 <th>${searchResult.datasetConfiguration.getColumn("TotalBalance").displayName}</th>
 </tr>
 </thead>
 <tbody>
<#assign ResultId =0>
 <#foreach doc in searchResult.docs>
  
   <tr>
	<td>${searchResult.highlight(doc, "PartyName")}</td>
	<td>${searchResult.highlight(doc, "PartyRole")}</td>
	<td>${searchResult.highlight(doc, "PartyIdentifier")}</td>
	<td>${pageStyleUtil.formatCurrency(doc.get("TotalBalance"))}</td>
   </tr>

 </#foreach>
  </tbody>
</table>

<#else>
	<table id="accounting" class="tablesorter">
	 <thead>
	 <tr>
		 <th>${searchResult.datasetConfiguration.getColumn("PartyName").displayName}</th>
		 <th>${searchResult.datasetConfiguration.getColumn("PartyRole").displayName}</th>
		 <th>${searchResult.datasetConfiguration.getColumn("PartyIdentifier").displayName}</th>
		 <th>${searchResult.datasetConfiguration.getColumn("TotalBalance").displayName}</th>
	 </tr>
	 </thead>
	 <tbody>
	<#assign ResultId =0>
	 <#foreach doc in searchResult.docs>

	   <tr>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
	   </tr>

	 </#foreach>
	  </tbody>
	</table>
</#if>



<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#accounting').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
		"aaSorting": [[ 1, "asc" ],[ 0, "asc" ]]
	});
} );
</script>
