<b>Parties</b>
<table id="parties" class="tablesorter">
	 <thead>
	     <tr>
	       <th class="header">${searchResult.datasetConfiguration.getColumn("DisplayName").displayName}</th>
	       <th class="header">Party Role<#--${searchResult.datasetConfiguration.getColumn("PartyRole").displayName}--></th>
               <th class="header">${searchResult.datasetConfiguration.getColumn("Address").displayName}</th>
               <th class="header">${searchResult.datasetConfiguration.getColumn("AmountOwed").displayName}</th>
               <th class="header">Payment</th>
	     </tr>
         </thead>
       <tbody>
<#if searchResult.docs?has_content>
     <#assign counter=0 >
     <#foreach doc in searchResult.docs>
      
        <#assign PartyRole = doc.getValues("PartyRole")  DisplayName = doc.getValues("DisplayName") Address = doc.getValues("Address") AmountOwed = doc.getValues("AmountOwed") CaseNumber = doc.getValues("CaseNumber") PartySeq = doc.getValues("PartySeq") PartyID = doc.getValues("PartyID") loopCounter = 0>
	<#foreach PartyRole in doc.getValues("PartyRole")>
	     <tr>               
               <td>${DisplayName[loopCounter]?replace('|', '&nbsp;')}</td>
               <td>${PartyRole}</td>
      <#if PartyRole = "DEFENDANT">
               <td>${Address[loopCounter]?replace('|', '&nbsp;')}</td>	
      <#else>
               <td></td>               
      </#if>
               <td>${AmountOwed[loopCounter]?replace('|', '&nbsp;')}</td>
     <#if AmountOwed[loopCounter] != "0.00">
     <#assign counter=counter + 1>
              <td>
                  <form id="paymentForm_${counter}" action="https://dt-contract33.amcad.com/ecomqa/paymentgateway.admin" method="post">
			<input type="hidden" name="application_name" value="AICMS">
			<input type="hidden" name="site_name" value="WARREN"> 		   
			<input type="hidden" name="item_name_${counter}" value="Court Fees">
			<input type="hidden" name="item_id_${counter}" value="${PartyID[loopCounter]?string}">
			<input type="hidden" name="item_case_number_${counter}" value="${CaseNumber[loopCounter]}">
			<input type="hidden" name="party_role_${counter}" value="${PartyRole}">
			<input type="hidden" name="item_amount_${counter}" value="${AmountOwed[loopCounter]?replace('|', '0.00')}">
			<input type="hidden" name="item_party_seq_${counter}" value="${PartySeq[loopCounter]?string}">
			<input type="hidden" name="image_url" value="http://roam.amcad.com/demo/templates/hyland/Default/resource/ROAM.gif">
			<input type="hidden" name="return_url" value="http://nv-es1/warren/search.do">
			<input type="hidden" name="return_text" value="Return to Search">
			<input type="hidden" name="cancel_text" value="Cancel and Return to Search">
			<input type="hidden" name="cancel_url" value="http://nv-es1/warren/search.do">
			<input type="hidden" name="loc_name" value="Location Name">
			<input type="hidden" name="loc_addr_l1" value="Address Line 1">
			<input type="hidden" name="loc_addr_l2" value="Address Line 2">
			<input type="hidden" name="loc_city" value="City">
			<input type="hidden" name="loc_state" value="State">
			<input type="hidden" name="loc_zip" value="Zip">
			<input type="hidden" name="loc_phone" value="111-111-1111">
			<input type="hidden" name="loc_comments1" value="">
			<input type="hidden" name="loc_comments2" value="">
			<input type="hidden" name="send_confirmation_email" value="N">
			<button type="submit" class="pay" >Pay Now</button>
                  </form>
              </td> 
      <#else>
              <td></td>
               
      </#if>
               <#assign loopCounter = loopCounter + 1>
	    </tr>
       </#foreach>
    </#foreach>
<#else>
            <tr>
                <td colspan="11"><b><i>No Party Information Available.</i></b></td>               
            </tr>
</#if>
</tbody>
</table>

<script type="text/javascript">
$(function() {      
    $("#parties").tablesorter({widgets: ['zebra']});
  }); 
</script>