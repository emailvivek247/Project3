       <#break>
    </#foreach>
    </#foreach>
</#if>

<#if searchResult.docs?has_content>

<#if (refCounter > 0)>


<b><font size="3px" color="#000000" face="verdana,sans-serif"> Referenced By</font></b>
<table id="refby" class="tablesorter">
           <thead>
                <tr>
<#--          <th>${searchResult.datasetConfiguration.getColumn("Instrument").displayName}</th> -->
