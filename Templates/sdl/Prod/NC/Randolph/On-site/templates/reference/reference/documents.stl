        <#--  <td>${DocRefLegacy2[loopCounter]?replace('|', '&nbsp;')}</td> -->
          <#assign loopCounter = loopCounter + 1>
               </tr>
         </#foreach>
 </#foreach>
</#if>

</#if>



</tbody>
      </table>
