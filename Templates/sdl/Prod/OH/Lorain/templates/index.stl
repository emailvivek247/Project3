<#include "/WEB-INF/view/admin/layout/OtherBasic.stl">
<@indexLayout title="Search Platform" encoding="utf-8">
<script type="text/javascript" src="http://public.lorainmunicourt.org/resources/javascripts/tp.js"></script>\
<script type="text/javascript" src="templates/resources/jquery.watermarkinput.js"></script>
<link rel="stylesheet" href="http://public.lorainmunicourt.org/resources/styles/tp.css" />
<link rel="shortcut icon" href="http://public.lorainmunicourt.org/favicon.ico"/>

<script type="text/javascript">
function check(ctrl)
{
    document.getElementById('search').style.display = (ctrl.checked) ? "":"none";
}
</script>

<#assign visibleIndexes = 0>

<table width="80%" align="center" border="0">         
	<tr>
		
		<td align="center"><img src="templates/resources/images/lorain_city_seal.png" border = "0" /></td>
		
	</tr>
</table>
            
 </br></br>
 
<div id="control" style="margin-left:auto; margin-right:auto;width:80%; ">
<#foreach dc in dcs>
