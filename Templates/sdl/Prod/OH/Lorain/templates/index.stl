		    <center><input type="checkbox" name="terms" value="terms" onclick="check(this)"/><b>I Agree with the Terms Stated Above</b></center></br></br>

 	    </td>
	  </tr>
	</table>
        <table id="search" align="center" border="0" style="display:none">
    
    		<tr>
    			<td align="right">
				<input type="hidden" name="indexName" value="${dc.name}">
				<input type="hidden" name="templateName" value="${templateName}">
    				<input style="margin-top:30px;" class="text" id="textbox" type="text" name="q" size="81" maxlength="2048" value="${HTMLEncodedQuery}">
    			</td>	
    			<td>	
    				<button type="submit" class ="search" style="margin-top:30px;background:#184795 url(templates/resources/images/blue-bar-striped.png) repeat-x scroll 50% 50%;" id="search">Search</button>
    			</td>
    		</tr>
    	</table>
    </form>
    
    <br/>
    </div>
</#if> 
 </#foreach>
</div>
<script type="text/javascript">
jQuery(function($){
   $("#textbox").Watermark("First Name   Last Name");   
});

function checkWaterMarkText() {
	if ($("#textbox").val() == "First Name   Last Name") {
			$("#textbox").val("");
	}
}
</script>

