<#--Add iframe for current date-->
<iframe align="right" height="30" width="500px" frameborder=0 text-align="right" scrolling="no" src='search.do?indexName=certdate&templateName=se'></iframe>

<#if searchResult.docs?has_content>
<b>Case Information</b>
<table  id="caseInfo" class="tablesorter">
 <thead>
	 <tr>
	    <th>${searchResult.datasetConfiguration.getColumn("CaseFilingDate").displayName}</th>
	    <th>${searchResult.datasetConfiguration.getColumn("CASE_NUMBER").displayName}</th>
	    <th>${searchResult.datasetConfiguration.getColumn("CaseType").displayName}</th>
  	    
	</tr>
</thead>


 <tbody>

<#foreach doc in searchResult.docs>

    <#assign CaseFilingDate = doc.getValues("CaseFilingDate")>
    <#assign CASE_NUMBER = doc.getValues("CASE_NUMBER")>
    <#assign CaseType = doc.getValues("CaseType")>
    
    
    
    

    <tr>
        <td>${pageStyleUtil.format(date.format("yyyy/MM/dd HH:mm:ss z",doc.getDate("CaseFilingDate")), "yyyy/MM/dd HH:mm:ss z", "MM/dd/yyyy")}</td>
        <td>${doc.get("CASE_NUMBER")}</td>
	<td>${doc.get("CaseType")}</td>
</tr>
   
   <#assign caseNumberKey = doc.getValues("CASE_NUMBER")>
</#foreach>


 </tbody>
</table>
<div id="partiescontainer"></div> 
<div id="docketcontainer"></div>

<#else>
<center><b>No Case Information Available</b></center>
</#if>
<script type="text/javascript">
$(document).ready(function() {
	oTable = $('#caseInfo').dataTable({
		"bJQueryUI": true,
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": true,
		"bInfo": false,
		"bAutoWidth": false,
		"aaSorting": []
	});
var url1 = "search.do?indexName=docketparty&templateName=party&lq=CASE_NUMBER%3A%22<#list caseNumberKey as CaseNumber>${CaseNumber}</#list>%22";
$('#partiescontainer').load(url1);
var url2 = "search.do?indexName=docket&templateName=docket&lq=CASE_NUMBER%3A%22<#list caseNumberKey as CaseNumber>${CaseNumber}</#list>%22";
$('#docketcontainer').load(url2);	
} );
</script>


