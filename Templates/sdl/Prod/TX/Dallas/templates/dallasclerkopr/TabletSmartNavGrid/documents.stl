<#-- *Modify columns -->
<table id="searchResult" class="tablesorter">
 <thead><tr>
  <th>${searchResult.datasetConfiguration.getColumn("Instrument").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("Name").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("DocType").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("PartyRole").displayName}</th>
  <th>${searchResult.datasetConfiguration.getColumn("LegalDescription").displayName}</th>
 </tr></thead>
 <tbody>
<#if searchResult.docs?has_content>
 <#foreach doc in searchResult.docs>
  <#include "document.stl">
 </#foreach>
</#if>
 </tbody>
</table>


<script type="text/javascript">
$(function() {      
    $("#searchResult").tablesorter({widgets: ['zebra']});
}); 
</script>
