<#include "../lib/include.stl" />

<#assign form=JspTaglibs["http://www.springframework.org/tags/form"]>
<#assign spring=JspTaglibs["http://www.springframework.org/tags"]>


<style>
div.ADCSI {
	width: 550px;
}
span.ADCSI_leftcol {
	width: 170px;
	text-align:right;
	display: inline-block;
}
</style>

<div id="container">
    				<div id="top" >
						<div id="nav">
				                <ul id="topnav" class="sf-menu left">
				                    <li style="padding:15px 15px 10px 15px;margin-right:2px;" class="menuItems"><a href="publiclogin.admin"><@spring.message code="security.authentication.loginHeader" /></a></li>
				                    <li style="padding:15px 15px 10px 15px;" class="menuItems"><a href="publicsignUp.admin"><@spring.message code="security.authentication.createHeader" /></a></li>
				                </ul><!-- #topnav -->
								<ul id="topnav" class="sf-menu right">
				                    <!--<li style="float:right;" class=""><a href="publiclogin.admin"><img src="resources/images/accept-logo.png" /></a></li> -->
				                </ul><!-- #topnav -->
			            </div><!-- #nav -->
			        </div><!-- end #top -->
				    <div id="passResetConfirmation">
						    <#if FAILURE_MSG?has_content>
						    <div class="important error" style="margin:20px;padding:10px;">
							    <table border="0" summary="Important">
							    <tr><td rowspan="2" align="center" valign="top" width="25">
							    <span class="ui-icon ui-icon-alert"></span></td>
							    <th align="left">Error</th></tr>
							    <tr><td colspan="2" align="left" valign="top"><ul style="padding:0 0 0 0; margin:0 0 0 0;">
							      <li>${FAILURE_MSG}</li>
							    </ul></td></tr>
							    </table>
							</div>
							<#else>
							<br /><br />
							<@form.form id="resetPassword-form" name="resetPassword" method="post" action="publicsubmitresetpassword.admin" modelAttribute="ResetPasswordForm" autocomplete="on">
							<@form.hidden path="token" />
						    <@form.hidden path="username" />
							<div class="ADCSI_row">
							<span class="ADCSI_leftcol"><@spring.message code="security.authentication.newPassword" /></span>
							<span class="ADCSI_rightcol" style="width: 330px; display: inline-block; ">
								<span>
									<@form.input class="validate[required,minSize[8],maxSize[20]] ADCSI_Input" type="password" style="font-family: Arial, Helvetica, sans;" id="password" name="password" tabindex="2" onkeyup="checkPassword('password')" maxlength="20" value="" />
									<@form.errors path="password" cssClass="sverror hidden" />
								</span><br /><br />
							</span>
							</div>
							<div class="ADCSI_row" style="text-align:center">
									<div id="strength"></div>
							</div>
							<div class="ADCSI_row">
							<span class="ADCSI_leftcol"><@spring.message code="security.authentication.newPasswordConfirm" /></span>
							<span class="ADCSI_rightcol" style="width: 330px; display: inline-block; ">
								<span>
									<@form.input class="validate[required,minSize[8],maxSize[20],equals[password]] ADCSI_Input" type="password" style="font-family: Arial, Helvetica, sans;" id="confirmPassword" name="confirmPassword" tabindex="3" maxlength="20" value="" />
									<@form.errors path="confirmPassword" cssClass="sverror hidden" />
								</span>
							</span>
							</div>
							<div style="text-align: center;padding-top: 30px;padding-bottom: 10px;">
								<span style="display:none;"></span>
									<input type="submit" name="resetPassword" id="resetPassword" value="<@spring.message code="security.authentication.changePassword" />" />
							</div>
							</@form.form>
							<div id="hint" class="ui-widget-content ui-corner-all" ></div>
							</#if>
					</div>	<!-- End #passResetConfirmation -->
					<div class="fill">&nbsp;</div>
					<div id="after-footer">
				        	<div class="container940">
				        		<div id="sn">
				                	<ul>
				                    	<li><a href="https://www.facebook.com/pages/AMCAD/193699310720652"><img src="resources/images/icons/fb.png" alt="Facebook AMCAD" border="0" /></a></li>
				                        <li><a href="http://www.linkedin.com/company/amcad?trk=tabs_biz_home"><img src="resources/images/icons/linkedin.png" alt="Linkedin AMCAD" border="0" /></a></li>
				                        <li><a href="https://twitter.com/AmCadLLC"><img src="resources/images/icons/twitter.png" alt="Twitter AMCAD" border="0" /></a></li>
				                        <li><a href="http://www.youtube.com/user/AMCADLLC"><img src="resources/images/icons/youtube.png" alt="YouTube AMCAD" border="0" /></a></li>
				                    </ul>
				                </div>
				                <div id="footertext">
				                    <a href="http://www.amcad.com"><img src="resources/images/amcadLogo.png" alt="AMCAD" height="42px" border="0" /></a> &nbsp; Copyright &copy;2013 (dba AmCad & AmCad Digital Conversions)
				                </div>
				               <div class="clear"></div><!-- clear float -->
				            </div><!-- end container940 -->
				        </div><!-- end #after-footer -->
	</div>	<!-- End #container -->



<script type="text/javascript">
		$(document).ready(function(){
			 $("input:submit").button();
			 $('#resetPassword-form').validationEngine();
       		 $('#resetPassword-form').validationEngine('hide');
			 $('#changepassword-form').validationEngine();
			 $('.sverror').each(function() {
			    var currentElement = '#' + $(this).attr('id').split('.')[0];
		        $(currentElement).validationEngine('showPrompt', $(this).html(), 'fail', 'topLeft', true);
			});
		});
</script>